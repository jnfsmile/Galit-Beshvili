{
  "name": "angular-beshvili",
  "version": "2.0.0",
  "author": "Naftali Friedman <jnfsmile@gmail.com>",
  "description": "website for בשבילי - אימון והדרכה",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnfsmile/BeshviliProd/"
	},
  "license": "",
  "scripts": {
    "start": "tsc && concurrently \"tsc -w\" \"nodemon server.js\" \"nodemon -e scss -x 'npm run build:css'\"",
    "start:dev": "tsc && concurrently \"tsc -w\" \"lite-server\" \"nodemon -e scss -x 'npm run build:css'\"",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "build:css": "node-sass client/sass/main.scss client/assets/css/main.css",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "server:dev": "nodemon server.js",
    "minify": "uglifyjs client/dist/bundle.js --screw-ie8 --compress --mangle --output client/dist/bundle.min.js",
    "build": "tsc && npm run build:css && browserify -s main client/dist/main.js > client/dist/bundle.js && npm run minify"
  },
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/router": "~3.4.0",

    "angular-in-memory-web-api": "~0.2.4",
    "systemjs": "0.19.40",
    "core-js": "^2.4.1",
    "rxjs": "5.0.1",
    "zone.js": "^0.7.4",

    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "mongojs": "^2.4.0",
    "morgan": "^1.7.0",
    "newrelic": "^1.37.0",
    "ng2-bootstrap": "^1.1.16",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.8"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "lite-server": "^2.2.2",
    "typescript": "^2.0.3",
    "canonical-path": "0.0.2",
    "http-server": "^0.9.0",
    "tslint": "^3.15.1",
    "lodash": "^4.16.4",
    "jasmine-core": "~2.4.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~4.0.14",
    "rimraf": "^2.5.4",
    "@types/core-js": "^0.9.34",
    "@types/node": "^6.0.46",
    "@types/jasmine": "^2.5.36",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "browserify": "^13.0.1",
    "uglifyjs": "^2.4.10"
  }
}
